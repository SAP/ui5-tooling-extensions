{
	"name": "ui5-middleware-instrumentation",
	"version": "0.0.1-rc",
	"description": "UI5 Tooling middleware to instrument code coverage with Istanbul",
	"author": {
		"name": "SAP SE",
		"email": "openui5@sap.com",
		"url": "https://www.sap.com"
	},
	"keywords": [
		"openui5",
		"sapui5",
		"ui5",
		"build",
		"development",
		"tool",
		"istandbul",
		"code coverage"
	],
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "git@github.com:SAP/ui5-tooling-extensions.git"
	},
	"type": "module",
	"files": [
		"CHANGELOG.md",
		"README.md",
		"../../CONTRIBUTING.md",
		"lib/**",
		"../../LICENSES/**",
		"../../.reuse/**"
	],
	"dependencies": {
		"xml2js": "^0.4.23",
		"express": "^4.18.2",
		"istanbul-lib-instrument": "^5.2.1",
		"istanbul-lib-report": "^3.0.0",
		"istanbul-reports": "^3.1.5",
		"istanbul-lib-coverage": "^3.2.0",
		"body-parser": "^1.20.1",
		"router": "^1.3.7"
	},
	"devDependencies": {
		"eslint": "^8.31.0",
		"eslint-config-google": "^0.14.0",
		"eslint-plugin-ava": "^13.2.0",
		"ava": "^5.1.0",
		"depcheck": "^1.4.3"
	},
	"scripts": {
		"test": "npm run lint && npm run coverage && npm run depcheck",
		"lint": "eslint ./",
		"depcheck": "depcheck --ignores ava",
		"unit": "rimraf test/tmp && ava",
		"unit-verbose": "rimraf test/tmp && cross-env UI5_LOG_LVL=verbose ava --verbose --serial",
		"unit-watch": "npm run unit -- --watch",
		"coverage": "npm run unit"
	},
	"ava": {
		"files": [
			"test/**/*.js"
		],
		"ignoredByWatcher": [
			"test/tmp/**"
		],
		"nodeArguments": [
			"--no-warnings"
		]
	}
}
